<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="com.zsdlku.zsdxlku.controller.MainLku"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <smartfilterbar:SmartFilterBar
                id="id_SmartFilterBar"
                entitySet="zsd_lku_headSet"
                filterBarExpanded="true"
            >
                <smartfilterbar:layoutData>
                    <FlexItemData
                        id="id_FlexItemData1"
                        shrinkFactor="0"
                    />
                </smartfilterbar:layoutData>
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration
                        id="id_ActId"
                        key="ActivityId"
                        visibleInAdvancedArea="true"
                    />
                    <smartfilterbar:ControlConfiguration
                        id="id_ReqId"
                        key="ReqId"
                        visibleInAdvancedArea="true"
                    />
                    <smartfilterbar:ControlConfiguration
                        id="id_Kunnr"
                        key="Kunnr"
                        visibleInAdvancedArea="true"
                    />
                    <smartfilterbar:ControlConfiguration
                        id="id_StatusLkuText"
                        controlType="dropDownList"
                        displayBehaviour="descriptionOnly"
                        key="StatusLkuText"
                        visibleInAdvancedArea="true"
                    />
                    <smartfilterbar:ControlConfiguration
                        id="id_CreateDate"
                        key="CreateDate"
                        conditionType="{
                                module: 'sap.ui.comp.config.condition.DateRangeType',
                                ignoreTime: true}"
                        visibleInAdvancedArea="true"
                    />
                </smartfilterbar:controlConfiguration>
            </smartfilterbar:SmartFilterBar>

            <smarttable:SmartTable
                id="id_SmartTable"
                entitySet="zsd_lku_headSet"
                smartFilterId="id_SmartFilterBar"
                beforeRebindTable="onBeforeRebindTable"
                tableType="ResponsiveTable"
                header="{i18n>title2}"
                showRowCount="true"
                enableAutoBinding="true"
                useTablePersonalisation="true"
                demandPopin="true"
                enableAutoColumnWidth="true"
                class="sapUiResponsiveContentPadding"
                persistencyKey="SmartTableAnalytical_Explored"
                app:useSmartToggle="true"
                ignoredFields="StatusLku,Deleted,Status,CreateName,ChangeName,Action,Flag,Msg,StatusTrs,FreeText,Etag,Role"
            >
                <Table
                    id="id_Table"
                    mode="MultiSelect"
                    growing="true"
                    width="auto"
                    growingScrollToLoad="false"
                    growingThreshold="20"
                >
                    <columns>
                    <Column
                            id="id_ActIdCol"
                            hAlign="Begin"
                            width="130px"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='{"columnKey": "ActivityId", "columnIndex": 1, "leadingProperty": "ActivityId", "sortProperty": "ActivityId", "filterProperty": "ActivityId", "additionalProperty": "ActivityId"}'
                                />
                            </customData>
                            <Text
                                id="_IDGenHText1"
                                text="{/#zsd_lku_head/ActivityId/@sap:label}"
                            />
                        </Column>
                        <Column
                            id="id_ReqIdCol"
                            hAlign="Begin"
                            width="130px"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='{"columnKey": "ReqId", "columnIndex": 2, "leadingProperty": "ReqId", "sortProperty": "ReqId", "filterProperty": "ReqId", "additionalProperty": "ReqId"}'
                                />
                            </customData>
                            <Text
                                id="_IDGenHText2"
                                text="{/#zsd_lku_head/ReqId/@sap:label}"
                            />
                        </Column>
                        <Column
                            id="id_KunnrCol"
                            hAlign="Begin"
                            width="100px"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='{"columnKey": "Kunnr", "columnIndex": 3, "leadingProperty": "Kunnr", "sortProperty": "Kunnr", "filterProperty": "Kunnr", "additionalProperty": "Kunnr"}'
                                />
                            </customData>
                            <Text
                                id="_IDGenHText3"
                                text="{/#zsd_lku_head/Kunnr/@sap:label}"
                            />
                        </Column>
                        <Column
                            id="id_Name1Col"
                            hAlign="Begin"
                            width="360px"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='{"columnKey": "Name1", "columnIndex": 4, "leadingProperty": "Name1", "sortProperty": "Name1", "filterProperty": "Name1", "additionalProperty": "Name1"}'
                                />
                            </customData>
                            <Text
                                id="_IDGenHText4"
                                text="{/#zsd_lku_head/Name1/@sap:label}"
                            />
                        </Column>
                        <Column
                            id="id_StatusLkuTextCol"
                            hAlign="Begin"
                            width="210px"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='{"columnKey": "StatusLkuText", "columnIndex": 5, "leadingProperty": "StatusLkuText", "sortProperty": "StatusLkuText", "filterProperty": "StatusLkuText", "additionalProperty": "StatusLkuText"}'
                                />
                            </customData>
                            <Text
                                id="_IDGenHText5"
                                text="{/#zsd_lku_head/StatusLkuText/@sap:label}"
                            />
                        </Column>

                        <Column
                            id="id_CreateDateCol"
                            hAlign="Begin"
                            width="140px"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "CreateDate", "columnIndex": 6, "leadingProperty": "CreateDate", "sortProperty": "CreateDate", "filterProperty": "CreateDate", "additionalProperty": "CreateDate", "type":"date" }'
                                />
                            </customData>
                            <Text
                                id="_IDGenHText7"
                                text="{/#zsd_lku_head/CreateDate/@sap:label}"
                            />
                        </Column>
                        <Column
                            id="id_ChangeDateCol"
                            hAlign="Begin"
                            width="140px"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "ChangeDate", "columnIndex": 6, "leadingProperty": "ChangeDate", "sortProperty": "ChangeDate", "filterProperty": "ChangeDate", "additionalProperty": "ChangeDate", "type":"date" }'
                                />
                            </customData>
                            <Text
                                id="_IDGenHText8"
                                text="{/#zsd_lku_head/ChangeDate/@sap:label}"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Link
                                    id="_IDGenLink1"
                                    text="{ActivityId}"
                                    press="onEditView"
                                />
                            </cells>
                            <cells>
                                <Link
                                    id="_IDGenLink2"
                                    text="{ReqId}"
                                    press="onCreditReq"
                                />
                            </cells>
                            <cells>
                                <Text
                                    id="_IDGenText2"
                                    text="{Kunnr}"
                                />
                            </cells>
                            <cells>
                                <Text
                                    id="_IDGenText3"
                                    text="{Name1}"
                                />
                            </cells>
                            <cells>
                                <Text
                                    id="_IDGenText4"
                                    text="{StatusLkuText}"
                                />
                            </cells>
                            <cells>
                                <Text
                                    id="_IDGenText5"
                                    text="{path:'CreateDate', type:'sap.ui.model.odata.type.DateTime', constraints: {displayFormat: 'Date'}}"
                                />
                            </cells>
                            <cells>
                                <Text
                                    id="_IDGenText6"
                                    text="{path:'ChangeDate', type:'sap.ui.model.odata.type.DateTime', constraints: {displayFormat: 'Date'}}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <smarttable:layoutData>
                    <FlexItemData
                        id="id_FlexItemData2"
                        growFactor="1"
                        baseSize="auto"
                    />
                </smarttable:layoutData>

            </smarttable:SmartTable>
        </content>
    </Page>
</mvc:View>
