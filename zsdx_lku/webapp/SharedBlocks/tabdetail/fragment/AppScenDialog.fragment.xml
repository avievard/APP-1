<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:tab="sap.ui.table"
>
    <m:Dialog
        title="Multiple Approval"
        id="id_DialogCrt"
        resizable="true"
        draggable="true"
    >

    <tab:Table
            id="id_AppScenDTab"
            selectionMode="None"
            rows="{prflListAppScenD>/data}"
            visibleRowCount="5"
            enableCellFilter="{ui>/cellFilterOn}"
            ariaLabelledBy="title"
            alternateRowColors="true"
            width="61rem"
        >
            <tab:columns>
                <tab:Column
                    id="_ID_GenColumn1"
                    width="3rem"
                    filterProperty="No"
                >
                    <m:Label
                        id="_ID_GenLabel1"
                        text="No."
                    />
                    <tab:template>
                        <m:Text
                            id="_ID_GenText1"
                            text="{prflListAppScenD>No}"
                            wrapping="false"
                        />
                    </tab:template>
                </tab:Column>
                <tab:Column
                    id="_ID_GenColumn2"
                    width="10rem"
                    filterProperty="Desc"
                >
                    <m:Label
                        id="_ID_GenLabel2"
                        text="Approval Scenario"
                    />
                    <tab:template>
                        <m:Text
                            id="_ID_GenText2"
                            text="{prflListAppScenD>Desc}"
                            wrapping="false"
                        />
                    </tab:template>
                </tab:Column>
                <tab:Column
                    id="_ID_GenColumn3"
                    width="15rem"
                    filterProperty="Position"
                >
                    <m:Label
                        id="_ID_GenLabel3"
                        text="Position"
                    />
                    <tab:template>
                        <m:Text
                            id="_ID_GenText3"
                            text="{prflListAppScenD>Position}"
                            wrapping="false"
                        />
                    </tab:template>
                </tab:Column>
                <tab:Column
                    id="_ID_GenColumn4"
                    width="32rem"
                    filterProperty="Name"
                >
                    <m:Label
                        id="_ID_GenLabel4"
                        text="Name"
                    />
                    <tab:template>
                        <m:Text
                            id="_ID_GenText4"
                            text="{prflListAppScenD>Name}"
                            wrapping="false"
                        />
                    </tab:template>
                </tab:Column>
            </tab:columns>
        </tab:Table>
       

        <m:FlexBox
            id="_ID_GenFlexBox3"
            alignItems="Stretch"
            justifyContent="End"
            width="100%"
        >
            <m:Button
                class="sapUiTinyMarginEnd"
                id="_ID_GenButton2"
                text="Close"
                press="onCloseAppScenDialog"
            />
        </m:FlexBox>
    </m:Dialog>
</core:FragmentDefinition>
