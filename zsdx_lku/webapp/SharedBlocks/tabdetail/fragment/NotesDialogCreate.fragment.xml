<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
>
    <m:Dialog
        title="Notes"
        id="id_DialogCrt"
        resizable="true"
        draggable="true"
    >
        <f:SimpleForm
            id="FormHeader2"
            layout="ResponsiveGridLayout"
            labelSpanXL="2"
            labelSpanL="2"
            labelSpanM="2"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <f:content>
                <!--Text Type -->
                <m:Label
                    id="id_TextTypeLabH"
                    text="Text Type"
                />
                <m:ComboBox
                    id="id_NotesTypeComH"
                    showSecondaryValues="true"
                    required="true"
                    filterSecondaryValues="true"
                    items="{ path: '/ZsdShTextTypeSet'}"
                >
                    <core:ListItem
                        id="id_NotesTypeValH"
                        key="{ZtextType}"
                        text="{Ztext}"
                        additionalText="{ZtextType}"
                    />
                </m:ComboBox>
                <m:Label
                    id="id_TextLabH"
                    text="Text"
                />
                <m:Input
                    id="id_TextVal"
                    required="true"
                />
            </f:content>
        </f:SimpleForm>

        <m:FlexBox
            id="_IDGenFlexBox3"
            alignItems="Stretch"
            justifyContent="End"
            width="100%"
        >
            <m:Button
                class="sapUiTinyMarginEnd"
                id="id_btnAdd"
                text="Add"
                press="onAddNotesDialog"
                type="Default"
            />
            <m:Button
                class="sapUiTinyMarginEnd"
                id="_IDGenButton2"
                text="Close"
                press="onCloseNotesDialog"
            />
        </m:FlexBox>
    </m:Dialog>
</core:FragmentDefinition>
