<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:tab="sap.ui.table"
>
    <m:Dialog
        title="Remarks"
        id="id_DialogCrt"
        resizable="true"
        draggable="true"
    >

       <m:TextArea
            id="id_Remarks"
            growing="true"
            width="100%"
            editable="false"
        />

        <m:FlexBox
            id="_ID_GenFlexBox3"
            alignItems="Stretch"
            justifyContent="End"
            width="100%"
        >
            <m:Button
                class="sapUiTinyMarginEnd"
                id="_ID_GenButton2"
                text="Close"
                press="onCloseStatHistDialog"
            />
        </m:FlexBox>
    </m:Dialog>
</core:FragmentDefinition>
